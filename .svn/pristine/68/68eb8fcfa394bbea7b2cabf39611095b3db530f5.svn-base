.inputArea{
    height: 1rem;
    line-height: 1rem;
    border-bottom: 1px solid #dedede;
    background: #f8f8f8;
    position: relative;
}
.inputArea .tips{
    position: absolute;
    right: 0.2rem;
    top: 0;
    height: 100%;
    padding-right: 0.6rem;
    background-image: url(../images/errorTips.png);
    background-repeat: no-repeat;
    background-position: right center;
    background-size: 0.3rem 0.3rem;
    font-size: 0.24rem;
    color: #e83328;
    line-height: 1rem;
    display: none;
}
.inputText{
    height: 100%;
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
    min-width: 0;

}
.inputText input{
    height: 100%;
    border: none;
    outline: none;
    background: #f8f8f8;
    vertical-align: top;
}
.inputArea .label{
    width: 1.2rem;
    font-size: 0.28rem;
    margin-left: 0.3rem;
}
.textarea{
    background: #f8f8f8;
}
.textarea textarea{
    width: 100%;
    height: 150px;
    background: #f8f8f8;
}
.submit{
    position: fixed;
    left: 0;
    right: 0;
    max-width:750px;
    bottom: 0;
    width: 100%;
    height: 0.8rem;
    background: #e83329;
    line-height: 0.8rem;
    font-size: 0.32rem;
    color: white;
    margin: 0 auto;
    text-align: center}
.submit input{
    display: inline-block;
    -webkit-appearance: none;
    width: 100%;
    height: 100%;
    height: 0.8rem;
    background: #e83329;
    line-height: 0.8rem;
    border: none;
    outline: none;
    font-size: 0.32rem;
    color: white;
}
