    /*direction: rtl;*/
/*}*/
/*select option {*/
    /*direction: ltr;*/
/*}*/
.heartTextArea textarea{
    display: inline-block;
    width: 100%;
    height: 100%;
    -webkit-appearance: none;
    border: 0;
    outline: 0;
    background-color: transparent;

}