
.heartBanner{
    height: 3.6rem;
    position: relative;
}
.haertContent{
    background: #f3debc;
    padding:  0 0.32rem;
    padding-top: 0.16rem;
}
.haertContent img{
}
.heartItem{
    background-image: url("../images/haertBg2.png");
    background-size: 6.88rem 18.09rem;
    background-repeat: no-repeat;
    height: 18.09rem;
    overflow: hidden;
    padding-bottom: 60px;
}
.heartInner{
    padding: 0 0.25rem;
    margin-top: 0.78rem;
}
.heartList{
    height: 2.6rem;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
    border: 0.01rem dashed #dab66a;
    background: #f5eab4;
    vertical-align: top;
    padding: 0.2rem;
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    margin-top: 0.2rem;
}
.heartList img{
    width: 2.44rem;
    height: 2.19rem;
    border: 0.01rem dashed #dab66a;
    margin-right: 0.18rem;
    box-sizing: border-box;
    -webkit-box-sizing: border-box;
}
.heartList .heartRight{
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
    min-width: 0;
    color: #a06801;
}
.heartRight .name{
    font-size: 0.32rem;
}
.heartRight .joinTime{
    font-size: 0.24rem;
    /* padding-bottom: 0.14rem; */
    /* padding-top: 0.07rem; */
}
.position{
    font-size: 0.26rem;
    line-height: 1.5;
}
.motto{
    color: #e83329;
    font-weight: bold;
    font-size: 0.3rem;
}
.heartBtn ,.sendBtn{
    text-align: center;
    padding-bottom: 0.79rem;
}
.heartBtn span,.sendBtn span{
    display: inline-block;
    font-size: 0.32rem;
    color: white;
    width: 4.5rem;
    height: 0.7rem;
    text-align: center;
    line-height: 0.7rem;
    background: #e83329;
    border-radius: 0.32rem;
    -webkit-border-radius: 0.32rem;
    margin-top: 0.7rem;
}
.heartForm{
    padding: 0.47rem 0.32rem 0.76rem 0.32rem;
}
.formItem{
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
    /*-webkit-box-align: center;*/
    /*-webkit-align-items: center;*/
    /*align-items: center;*/
}
.formItem label{
    width: 1.68rem;
    height: 0.7rem;
    vertical-align: middle;
    line-height: 0.7rem;
}
.formItem .heartSelect,.heartInput{
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
    min-width: 0;
    height: 0.7rem;
    padding-left: 0.83rem;
}

.heartTextArea{
    height: 4rem;
    -webkit-box-flex: 1;
    -webkit-flex: 1;
    flex: 1;
    min-width: 0;
    -webkit-appearance: none;
    apperance:none;
    cursor: pointer;
    border-radius: 0.08rem;
    border: 1px solid #e6e6e6;
}
.heartSelect,.heartInput{
    border: 1px solid #e6e6e6;
    border-radius: 0.08rem;
    position: relative;
    margin-bottom: 0.2rem;

}
.heartInput{
    padding-right: 0;
}
.heartInput input{
    display: inline-block;
    width: 100%;
    height:0.66rem;
    -webkit-appearance: none;
    border: none;
    outline: none;
}
.heartSelect:after{
    content: " ";
    display: inline-block;
    border-width: 6px 6px 0 6px;
    border-color:#C8C8CD transparent transparent transparent ;
    border-style: solid;
    position: relative;
    top: -2px;
    position: absolute;
    top: 50%;
    right: 15px;
    margin-top: -4px;
}
.formItem .heartSelect select{
    -webkit-appearance: none;
    border: 0;
    outline: 0;
    background-color: transparent;
    width: 100%;
    font-size: inherit;
    height: 100%;
    line-height: 0.7rem;
    position: relative;
    z-index: 1;
    text-align: right;
    color:#C8C8CD ;
}
